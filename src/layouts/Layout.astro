---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

export interface Props {
	title: string
}

const { title = 'Blocuri Beton' } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='generator' content={Astro.generator} />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.ico' />
		<meta
			name='description'
			content='O soluție simplă, funcțională și adaptabilă pentru construcțiile modulare flexibile temporare sau permanente.'
		/>
		<meta name='keywords' content='Blocuri, Beton, Blocuri intercalabile' />
		<title>{title}</title>
	</head>
	<body class='min-w-[22rem] max-w-6xl mx-auto flex flex-col p-6 md:p-12'>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
